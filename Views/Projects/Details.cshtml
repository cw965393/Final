@model BuffteksWebsite.Models.ProjectDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details for projects</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TheProject.ProjectName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TheProject.ProjectName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TheProject.ProjectDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TheProject.ProjectDescription)
        </dd>
    </dl>
</div>
<div>
    <h4>
        Participants - Client
    </h4>
    <hr />    
    <table class="table">
        <thead>
            <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var client in Model.ProjectClients) {
            <tr>
                <td>
                    @Html.DisplayFor(c => client.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(c => client.LastName)
                </td>
                <td>
                    <a asp-action="DeleteProjectParticipant" asp-route-pid="@Model.TheProject.ID" asp-route-id="@client.ID"><button type="button" class="btn btn-primary btn-sm">Delete</button></a>
                    <!--<span class="text-danger">TODO: We need to cascade delete members if a project is deleted</span>-->
                </td>                
            </tr>
    }
        </tbody>
    </table>    
</div>
<div>
    <h4>
        Participants - Member
    </h4>
    <hr />    
    <table class="table">
        <thead>
            <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var member in Model.ProjectMembers) {
            <tr>
                <td>
                    @Html.DisplayFor(m => member.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(m => member.LastName)
                </td>
                <td>
                    <a asp-action="DeleteProjectParticipant" asp-route-pid="@Model.TheProject.ID" asp-route-id="@member.ID"><button type="button" class="btn btn-primary btn-sm">Delete</button></a>
                    <!--<span class="text-danger">TODO: We need to cascade delete members if a project is deleted</span>-->
                </td>
            </tr>
    }

        </tbody>
    </table>    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TheProject.ID"><button type="button" class="btn btn-primary btn-sm">Edit</button></a> |
    <a asp-action="Index"><button type="button" class="btn btn-primary btn-sm">Back to list</button></a>
</div>
